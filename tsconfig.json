{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "example"]
}
